<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_light_purple"
    android:fillViewport="true">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="16dp"
            android:layout_gravity="center_vertical">

            <!-- Logo -->
            <ImageView
                android:id="@+id/ivLogoForgotPassword"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/logo"
                android:contentDescription="App logo"
                android:layout_marginBottom="16dp" />

            <!-- Title -->
            <TextView
                android:id="@+id/tvForgotPasswordTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reset Password"
                android:textSize="24sp"
                android:textStyle="bold"
                android:paddingBottom="8dp"
                android:textColor="@color/titleColor"
                android:contentDescription="Reset Password Page Title" />

            <!-- Subtitle -->
            <TextView
                android:id="@+id/tvForgotPasswordSubtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Enter your email to receive a password reset link"
                android:textSize="16sp"
                android:textColor="@color/subtitleColor"
                android:paddingBottom="16dp"
                android:gravity="center_horizontal"
                android:contentDescription="Instruction for resetting password" />

            <!-- Email Input -->
            <EditText
                android:id="@+id/etForgotPasswordEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:background="@drawable/rounded_edit_text"
                android:padding="12dp"
                android:layout_marginBottom="16dp"
                android:textColor="@color/textColor"
                android:textColorHint="@color/hintColor"
                android:contentDescription="Enter your email for password reset" />

            <!-- Reset Password Button -->
            <Button
                android:id="@+id/btnSendResetLink"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_button"
                android:text="Send Reset Link"
                android:textColor="@color/buttonTextColor"
                android:layout_marginBottom="16dp"
                android:contentDescription="Send Password Reset Link Button" />

            <!-- Back to Login Link -->
            <TextView
                android:id="@+id/tvBackToLogin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Back to Login"
                android:textColor="@color/linkColor"
                android:contentDescription="Navigate back to Login Page"
                android:paddingTop="16dp" />

        </LinearLayout>

    </FrameLayout>

</ScrollView>
