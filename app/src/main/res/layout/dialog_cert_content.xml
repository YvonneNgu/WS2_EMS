<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/tvDialogTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:id="@+id/tvCertificateType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:layout_marginBottom="8dp"/>

    <EditText
        android:id="@+id/etPresentedTo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="This certificate is proudly presented to"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="participant name"
        android:layout_marginBottom="8dp"/>

    <EditText
        android:id="@+id/etCertificateContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Certificate content"
        android:layout_marginBottom="8dp"/>

    <EditText
        android:id="@+id/etEventDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"/>

</LinearLayout>

