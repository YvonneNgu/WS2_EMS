<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="6dp"
    app:cardBackgroundColor="#DDD5F3">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Event Name -->
        <TextView
            android:id="@+id/eventNameTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Event Name"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <!-- Event Description -->
        <TextView
            android:id="@+id/eventDescriptionTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Event Description"
            android:textSize="14sp"
            android:layout_marginBottom="8dp" />

        <!-- Event Location -->
        <TextView
            android:id="@+id/eventLocationTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Event Location"
            android:textSize="14sp"
            android:layout_marginBottom="8dp" />

        <!-- Event Date -->
        <TextView
            android:id="@+id/eventDateTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Event Date"
            android:textSize="14sp"
            android:layout_marginBottom="8dp" />

        <!-- Event Price -->
        <TextView
            android:id="@+id/eventPriceTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Price"
            android:textSize="14sp"
            android:layout_marginBottom="8dp" />

        <!-- Event Category -->
        <TextView
            android:id="@+id/eventCategoryTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Category"
            android:textSize="14sp"
            android:layout_marginBottom="8dp" />

        <!-- Event Capacity -->
        <TextView
            android:id="@+id/eventCapacityTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Capacity"
            android:textSize="14sp"
            android:layout_marginBottom="8dp" />

        <!-- Lottie Clock Animation -->
        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/clockAnimationView"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            app:lottie_rawRes="@raw/clock_animation"
            app:lottie_loop="true"
            app:lottie_autoPlay="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="26dp"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"
            android:text="Your Event is under review"
            android:textSize="14sp" />
    </LinearLayout>
</androidx.cardview.widget.CardView>
